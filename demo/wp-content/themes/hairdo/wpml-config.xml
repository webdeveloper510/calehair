<wpml-config>
    <custom-fields>
        <custom-field action="translate">cmb_byline</custom-field>
        <custom-field action="translate">cmb_multi_intro</custom-field>
        <custom-field action="translate">cmb_title</custom-field>
        <custom-field action="translate">cmb_info</custom-field>
        <custom-field action="translate">cmb_item_price</custom-field>
    </custom-fields>
    <custom-types>
        <custom-type translate="1">cpt_people</custom-type>
        <custom-type translate="1">cpt_project</custom-type>
        <custom-type translate="1">cpt_item</custom-type>
    </custom-types>    
    <taxonomies>
        <taxonomy translate="1">people_category</taxonomy>
        <taxonomy translate="1">project_category</taxonomy>
        <taxonomy translate="1">item_category</taxonomy>
    </taxonomies>    
    <admin-texts>
        <key name="canon_options">
            <key name="construction_msg" />
            <key name="autocomplete_words" />
        </key>
        <key name="canon_options_frame">
            <key name="logo_text" />
            <key name="header_img_text" />
            <key name="header_banner_code" />
            <key name="header_text" />
            <key name="countdown_description" />
            <key name="footer_text" />
        </key>
        <key name="canon_options_post">
            <key name="search_box_text" />
            <key name="404_title" />
            <key name="404_msg" />
            <key name="currency_symbol" />
            <key name="currency_symbol_pos" />
        </key>
    </admin-texts>    
    <language-switcher-settings>
        <key name="icl_lang_sel_config">
            <key name="font-current-normal">#444444</key>
            <key name="font-current-hover">#000000</key>
            <key name="background-current-normal">#ffffff</key>
            <key name="background-current-hover">#eeeeee</key>
            <key name="font-other-normal">#444444</key>
            <key name="font-other-hover">#000000</key>
            <key name="background-other-normal">#ffffff</key>
            <key name="background-other-hover">#eeeeee</key>
            <key name="border">#cdcdcd</key>
        </key>
        <key name="icl_lang_sel_footer_config">
            <key name="font-current-normal">#444444</key>
            <key name="font-current-hover">#000000</key>
            <key name="background-current-normal">#ffffff</key>
            <key name="background-current-hover">#eeeeee</key>
            <key name="font-other-normal">#444444</key>
            <key name="font-other-hover">#000000</key>
            <key name="background-other-normal">#ffffff</key>
            <key name="background-other-hover">#eeeeee</key>
            <key name="border">#cdcdcd</key>
        </key>    
        <key name="icl_language_switcher_sidebar">0</key>  
        <key name="icl_widget_title_show">0</key>
        <key name="icl_lang_sel_type">dropdown</key>
        <key name="icl_lso_link_empty">0</key>
        <key name="icl_lso_flags">0</key>
        <key name="icl_lso_native_lang">1</key>
        <key name="icl_lso_display_lang">1</key>
        <key name="icl_lang_sel_footer">0</key>
        <key name="icl_post_availability">0</key>
        <key name="icl_post_availability_position">below</key>
        <key name="icl_post_availability_text">This post is also available in: %s</key>    
    </language-switcher-settings>    
</wpml-config>


